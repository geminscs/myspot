<div class="container" id="article_container">
  <p id="notice"><%= notice %></p>
<div id="user">
  <h3><%= @user.user_name %></h3>
  <hr style="border-top: 1px solid #aaaaaa"/>

  Country: <%= @user.country %><br>
  City: <%= @user.city %>
  <div>
    Articles:<br>
    <% @user.articles.each do |a| %>
        <%= link_to a.title, article_url(a.id) %><br>
    <% end %>
  </div>
  <% if session[:user_id] == @user.id %>
      <%= link_to 'Edit', edit_user_path(@user), class:"edit_link" %>
  <% end %>
</div>

<div id="blog">
<% @user.articles.each do |article|  %>
    <div>
      <h2><%= link_to article.title, article %></h2>
      <p id="content"><%= sanitize(article.content.truncate(400))%></p>
    </div>
      <hr style="border-top: 1px solid #aaaaaa"/>
<% end %>
</div>


</div>