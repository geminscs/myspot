<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @article.content %>
</p>

<p>
  <strong>User:</strong>
  <%= @article.user.user_name %>
</p>

<% @comments.each do |c|  %>
    <div class="row">
      <div class="col-md-7">
        <% if c.user_id != nil %>
          <p><%= c.content%></p>
          <p><%= c.user.user_name%></p>
        <% end %>
      </div>

    </div>
<% end %>

<% if session[:user_id] %>
  <%= form_for(@comment) do |f| %>
      <div class="field">
        <%= f.label :content %><br>
        <%= f.text_area :content %>
      </div>
      <%= f.hidden_field :article, value:@article.id %>
      <div class="actions">
        <%= f.submit %>
      </div>
  <% end %>
<% end %>
<% if @article.user_id == session[:user_id] %>
<%= link_to 'Edit', edit_article_path(@article) %>|
<% end %>
<%= link_to 'Back', home_url %>
